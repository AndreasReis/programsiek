        private void Clear_Click(object sender, EventArgs e)
        {
            this.Screen.Text = "";
            this.entry = string.Empty;
            this.FirstOperand = string.Empty;
            this.SecondOperand = string.Empty;
        }

        private void Equal_Click(object sender, EventArgs e)
        {
            SecondOperand = entry;
            float Num, Num1, Num2;
            float.TryParse(FirstOperand, out Num1);
            float.TryParse(SecondOperand, out Num2);

            //this.Screen.Text = "";
            //this.entry = string.Empty;
            

            if (Operation == '+')
            {
                Result = Num1 + Num2;
                Screen.Text = FirstOperand + " + " + SecondOperand + " = " + Result.ToString();
                //Num = Result;

            }
            else if (Operation == '-')
            {
                Result = Num1 - Num2;
                Screen.Text = FirstOperand + " - " + SecondOperand + " = " + Result.ToString();

            }
            else if (Operation == '*')
            {
                Result = Num1 * Num2;
                Screen.Text = FirstOperand + " * " + SecondOperand + " = " + Result.ToString();
            }
            else if (Operation == '/')
            {
                if (Num2 != 0)
                {
                    Result = Num1 / Num2;
                    Screen.Text = FirstOperand + " / " + SecondOperand + " = " +  Result.ToString();

                }
                else
                {
                    Screen.Text = "No Result!";
                }
            }

            this.FirstOperand = string.Empty;
            this.SecondOperand = string.Empty;

        }
    }
